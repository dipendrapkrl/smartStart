<?xml version="1.0" encoding="UTF-8"?>
<project name="smartstart" default="all">
  
  
  <property file="smartstart.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module SmartStart -->
  
  <dirname property="module.smartstart.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.smartstart" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.smartstart" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.smartstart" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.smartstart" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="smartstart.output.dir" value="${module.smartstart.basedir}/out/production/SmartStart"/>
  <property name="smartstart.testoutput.dir" value="${module.smartstart.basedir}/out/test/SmartStart"/>
  
  <path id="smartstart.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="smartstart.module.production.classpath">
    <path refid="${module.jdk.classpath.smartstart}"/>
    <pathelement location="${basedir}/libs/joda-time-2.5.jar"/>
    <pathelement location="${basedir}/libs/commons-configuration-1.10.jar"/>
    <pathelement location="${basedir}/libs/commons-lang-2.6.jar"/>
    <pathelement location="${basedir}/libs/commons-logging-1.2.jar"/>
  </path>
  
  <path id="smartstart.runtime.production.module.classpath">
    <pathelement location="${smartstart.output.dir}"/>
    <pathelement location="${basedir}/libs/joda-time-2.5.jar"/>
    <pathelement location="${basedir}/libs/commons-configuration-1.10.jar"/>
    <pathelement location="${basedir}/libs/commons-lang-2.6.jar"/>
    <pathelement location="${basedir}/libs/commons-logging-1.2.jar"/>
  </path>
  
  <path id="smartstart.module.classpath">
    <path refid="${module.jdk.classpath.smartstart}"/>
    <pathelement location="${smartstart.output.dir}"/>
    <pathelement location="${basedir}/libs/joda-time-2.5.jar"/>
    <pathelement location="${basedir}/libs/commons-configuration-1.10.jar"/>
    <pathelement location="${basedir}/libs/commons-lang-2.6.jar"/>
    <pathelement location="${basedir}/libs/commons-logging-1.2.jar"/>
  </path>
  
  <path id="smartstart.runtime.module.classpath">
    <pathelement location="${smartstart.testoutput.dir}"/>
    <pathelement location="${smartstart.output.dir}"/>
    <pathelement location="${basedir}/libs/joda-time-2.5.jar"/>
    <pathelement location="${basedir}/libs/commons-configuration-1.10.jar"/>
    <pathelement location="${basedir}/libs/commons-lang-2.6.jar"/>
    <pathelement location="${basedir}/libs/commons-logging-1.2.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.smartstart">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.smartstart">
    <patternset refid="excluded.from.module.smartstart"/>
  </patternset>
  
  <path id="smartstart.module.sourcepath">
    <dirset dir="${module.smartstart.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.smartstart" depends="compile.module.smartstart.production,compile.module.smartstart.tests" description="Compile module SmartStart"/>
  
  <target name="compile.module.smartstart.production" depends="register.custom.compilers" description="Compile module SmartStart; production classes">
    <mkdir dir="${smartstart.output.dir}"/>
    <javac2 destdir="${smartstart.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.smartstart}/javac">
      <compilerarg line="${compiler.args.smartstart}"/>
      <bootclasspath refid="smartstart.module.bootclasspath"/>
      <classpath refid="smartstart.module.production.classpath"/>
      <src refid="smartstart.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.smartstart"/>
    </javac2>
    
    <copy todir="${smartstart.output.dir}">
      <fileset dir="${module.smartstart.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.smartstart.tests" depends="register.custom.compilers,compile.module.smartstart.production" description="compile module SmartStart; test classes" unless="skip.tests"/>
  
  <target name="clean.module.smartstart" description="cleanup module">
    <delete dir="${smartstart.output.dir}"/>
    <delete dir="${smartstart.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.smartstart" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.smartstart" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>